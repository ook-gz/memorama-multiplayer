datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Jugador {
  id              Int             @id @default(autoincrement())
  nombre          String
  sucursal        String
  email           String          @unique
  creadoEn        DateTime        @default(now())

  participaciones Participacion[]
}

model Participacion {
  id        Int      @id @default(autoincrement())
  tiempo    String
  fecha     String
  sessionId String
  jugadorId Int
  jugador   Jugador  @relation(fields: [jugadorId], references: [id])
}